<div class="login-container">
    <div class="login-form-container">
        <h1 class="login-title">Welcome! Please Login.</h1>
        <form class="layui-form layui-form-pane" lay-filter="login" action="">
            <div class="layui-form-item">
                <label class="layui-form-label">Email</label>
                <div class="layui-input-block">
                    <input type="email" name="email" placeholder="Email address" lay-verify="email" autocomplete="off"
                        class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">Password</label>
                <div class="layui-input-block">
                    <input type="password" name="password" placeholder="Password" lay-verify="password"
                         autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button type="submit" class="layui-btn" lay-submit lay-filter="login">Login</button>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <a href="/register" class="register-btn">No account? Register.</a>
                </div>
            </div>
        </form>
    </div>
    <script src="/public/js/login.js"></script>
    <style>
        .login-title {
            color: white;
            margin-top: 50px;
            text-align: center;
            margin-bottom: 50px;
        }

        .login-form-container {
            width: 400px;
        }

        .login-container {
            display: flex;
            justify-content: center;
        }

        .register-btn {
            color: white;
        }
    </style>
</div>